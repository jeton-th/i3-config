exec_always --no-startup-id $HOME/.config/polybar/launch.sh
exec --no-startup-id "setxkbmap -layout us,al,mk,ar -variant ,plisi,,"
exec --no-startup-id "setxkbmap -option 'grp:alt_shift_toggle'"
exec --no-startup-id xsetroot -solid "#333333"
exec --no-startup-id nm-applet
exec --no-startup-id volumeicon

focus_follows_mouse no
default_border pixel 0
gaps inner 20
smart_gaps on

bindsym XF86MonBrightnessUp exec --no-startup-id xbacklight -inc 10
bindsym XF86MonBrightnessDown exec --no-startup-id xbacklight -dec 10

for_window [urgent="latest"] focus
for_window [class="(?i)chromium"] move container to workspace $ws1
for_window [class="(?i)slack"] move container to workspace $ws4
for_window [class="(?i)zoom"] move container to workspace $ws5
